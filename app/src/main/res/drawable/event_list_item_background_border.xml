<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape>
            <stroke
            android:width="1dp"
            android:color="@color/black"
            />
            <corners android:radius="14dp"/>
        </shape>

    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape>
            <corners android:radius="15dp" />

            <stroke
                android:width="1dp"
                android:color="#333333" />
        </shape>
    </item>

    <item
        android:left="1.5dp"
        android:right="1.5dp"
        android:top="1.5dp"
        android:bottom="1.5dp">
        <shape>
            <corners android:radius="15dp" />

            <stroke
                android:width="1dp"
                android:color="#999999" />

        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="17dp" />
            <stroke
                android:width="1dp"
                android:color="#cccccc" />

        </shape>

    </item>

</layer-list>